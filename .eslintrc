{
  "root": true,
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react-hooks"],
  "extends": [
    "eslint-config-alloy/react",
    "eslint-config-alloy/typescript",
    "prettier",
    "prettier/react",
    "prettier/@typescript-eslint",
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "no-console": 1,
    "react/jsx-indent": ["error", 2],
    "react/jsx-indent-props": ["error", 2],
    "no-implict-any": false
  }
}