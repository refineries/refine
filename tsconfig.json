{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["esnext", "dom", "dom.iterable"],
    "strict": true,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "include": [
    "components/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
