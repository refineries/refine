{
  "name": "@refineries/refine",
  "version": "0.0.2",
  "description": "A UI component library with the principle of refine design",
  "license": "MIT",
  "repository": "Refineries/refine",
  "bugs": {
    "url": "https://github.com/refineries/refine/issues"
  },
  "private": false,
  "keywords": [
    "refine",
    "refine-ui"
  ],
  "main": "esm/index.js",
  "module": "esm/index.js",
  "sideEffects": false,
  "files": [
    "esm/",
    "LICENSE",
    "README.md"
  ],
  "authors": [
    "YiMing Yin",
    "Sta Zhu"
  ],
  "scripts": {
    "start:site": "cross-env NODE_ENV=development webpack-dev-server --config webpack.config.js",
    "build:site": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "build:sass": "sass components:esm",
    "build:tsc": "tsc --rootDir components --outDir esm-tsc",
    "build:babel": "babel esm-tsc --out-dir esm",
    "build:esm": "npm run build:tsc && npm run build:babel && rimraf esm-tsc",
    "build": "npm run build:esm && npm run build:sass",
    "format": "prettier --check --write \"./**/*.+(tsx|ts|jsx|js|json|css|scss|sass|html|md)\"",
    "lint": "eslint --ext .tsx,.ts,.jsx,.js ./ && stylelint \"./**/*.+(css|scss|sass)\"",
    "lint:fix": "eslint --fix --ext .tsx,.ts,.jsx,.js ./ && stylelint --fix \"./**/*.+(css|scss|sass)\"",
    "publish": "npm publish --registry https://registry.npmjs.org --access public"
  },
  "dependencies": {
    "core-js": "^3.3.2",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-router-dom": "^5.1.2",
    "regenerator-runtime": "^0.13.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@hot-loader/react-dom": "^16.10.2",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.2",
    "@types/react-router-dom": "^4.3.5",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "cross-env": "^5.2.1",
    "css-loader": "^3.1.0",
    "eslint": "^6.5.1",
    "eslint-config-alloy": "^2.1.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.1.2",
    "fork-ts-checker-notifier-webpack-plugin": "^1.0.2",
    "fork-ts-checker-webpack-plugin": "^1.5.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "react-hot-loader": "^4.12.15",
    "sass": "^1.23.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^11.1.1",
    "stylelint-config-recommended": "^3.0.0",
    "ts-loader": "^6.2.0",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint .commitlintrc.js -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.(js|jsx|ts|tsx)": [
      "prettier --check --write",
      "eslint --ext .tsx,.ts,.jsx,.js",
      "git add"
    ],
    "*.(css|scss|sass)": [
      "prettier --check --write",
      "stylelint",
      "git add"
    ],
    "*.(html|md)": [
      "prettier --check --write",
      "git add"
    ]
  }
}
